{% extends layout() %}

{% block title %} Hello {{ variable }}! {% endblock %}

{% block body %}
	{% if user %}
		<div class="row">
			<h1>Hi, {{ user.username }}!</h1>
		</div>
	{% endif %}
	<div class="row">
		<div class="col s6 offset-s3">
			<table class="striped centered responsive-table">
				<thead>
					<tr>
						<th>Username</th>
					</tr>
				</thead>

				<tbody>
				{% for _ in users %}
					<tr>
						<td>{{ _.username }}</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
	</div>


	{% include module("floating_menu") %}
	{# Wall of registered users (except admins) #}
	{# register button #}
	{# login/logout buttons #}
	{# admin button #}
{% endblock %}